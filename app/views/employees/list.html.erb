<div>
	<h4>Employee List</h4>
	<table cellpadding="0" cellspacing="0" class="admin-table table-striped table-bordered table-condensed">
	<thead>
	<tr>
	<th>Employee ID</th>
	<th>Employee Name</th>
	<th>Designation </th>
	<th>Department</th>
	<th colspan="3"></th>
	</tr>	
	</thead>
	<tbody>
	<% if @emp_list.size > 0 %>
	<% @emp_list.each do |emp| %>
	<tr>
	<td><%=emp.emp_id%></td>
	<td><%=emp.full_name%></td>
	<td><%=emp.designation%></td>
	<td><%=emp.department%></td>
	<td><a href="/employees/edit?id=<%=emp.id%>">Edit</a></td>
	<td><a href="/salary/edit?emp_id=<%=emp.id%>">Salary Details</a></td>
	<td><a href="/employees/destroy?id=<%=emp.id%>">Delete</a></td>
	</tr>
	<% end %>
	<% else %>
	<td colspan="7"><p align="center">No Employees</p></td>
	<% end %>
	</tbody>
	</table>
</div>
